<odoo>
    <record model="ir.ui.view" id="tetras_student_form_view_inherit">
        <field name="name">tetras.student.form.inherit</field>
        <field name="model">tetras.student</field>
        <field name="inherit_id" ref="view_tetras_contact_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='contact']" position="inside">
                <field name="classe_id"/>
                <field name="average_grade"/>
            </xpath>
            <xpath expr="//group[@name='contact']" position="after">
                <group name="grade">
                    <field name="grade_ids">
                        <tree>
                            <field name="grade"/>
                            <field name="control_id"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

    <record id="tetras_student_action" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">tetras.student</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
