<odoo>
    <record model="ir.ui.view" id="tetras_teacher_form_view_inherit">
        <field name="name">tetras.teacher.form.inherit</field>
        <field name="model">tetras.teacher</field>
        <field name="inherit_id" ref="view_tetras_contact_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='birth_day']" position="after">
                <field name="diploma"/>
            </xpath>
        </field>
    </record>

    <record id="tetras_teacher_action" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">tetras.teacher</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
